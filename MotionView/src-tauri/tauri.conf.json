{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Motion View",
  "version": "0.1.0",
  "identifier": "com.motionview.motionview",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "motionview",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "../src/bridge.py",
      "../src/assets/",
      "../package.json"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
