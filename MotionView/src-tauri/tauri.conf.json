{
  "$schema": "https://schema.tauri.app",
  "productName": "MotionView",
  "version": "0.1.0",
  "identifier": "com.motionview.motionview",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm py:build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "motionview",
        "width": 800,
        "height": 600,
        "additionalBrowserArgs": "--force-color-profile=srgb"

      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "../src/bridge.py",
      "../src/assets/",
      "../package.json"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icon/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/motionview-py"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
